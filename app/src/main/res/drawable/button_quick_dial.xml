<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dp"/>
            <solid android:color="#f67bfd"/>
            <stroke android:width="1.0dip" android:color="#222"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="20dp"/>
                    <solid android:color="#6adab4"/>
                    <stroke android:width="1.0dip" android:color="#000000"/>
                    <gradient android:angle="180" android:type="linear"
                        android:startColor="#ffffff"
                        android:endColor="#ff0202" />
                </shape>
            </item>
            <item android:bottom="8dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="20dp"/>
                    <solid android:color="#ffffff"/>
                    <stroke android:width="1.0dip" android:color="#222"/>
                </shape>
            </item>

        </layer-list>

    </item>
</selector>