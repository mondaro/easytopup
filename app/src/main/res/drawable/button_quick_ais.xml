<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dp"/>
            <solid android:color="#f67bfd"/>
            <stroke android:width="1.0dip" android:color="#222" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/bg_topup_ais" />
                    <stroke android:width="3.0dip" android:color="#fff" />
                    <gradient android:angle="180" android:type="linear"
                        android:startColor="#fff"
                        android:centerColor="#fff"
                        android:endColor="@color/bg_topup_ais" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>