<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_topup_ais"
        android:id="@+id/bgTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="@string/txtM122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="เบอร์โทรศัพท์"
                        android:id="@+id/textView"
                        android:height="35dp"
                        android:gravity="center_vertical"
                        android:layout_weight="2"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/text_topup_pad"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnHistory"
                        android:drawableLeft="@android:drawable/ic_menu_revert"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:text="เบอร์ล่าสุด"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="สมุดโทรศัพท์"
                        android:id="@+id/btnFindContact"
                        android:layout_weight="1"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textViewPhone"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/border_inactive"
                    android:textColor="@color/text_topup_pad"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:padding="6dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="จำนวนเงิน"
                        android:id="@+id/textView3"
                        android:height="35dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_topup_pad"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textViewCost"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/border_inactive"
                    android:textColor="@color/text_topup_pad"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:padding="6dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center_vertical|center|center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/item_AIS"
                    android:id="@+id/textViewAIS"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="26sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@color/bg_topup_ais" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/item_DTAC"
                    android:id="@+id/textViewDTAC"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="26sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@color/bg_topup_dtac" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/item_TRUE"
                    android:id="@+id/textViewTRUE"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="26sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@color/bg_topup_true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:padding="0dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/button1"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:id="@+id/button2"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:id="@+id/button3"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:padding="0dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="4"
                            android:id="@+id/button4"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:id="@+id/button5"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="6"
                            android:id="@+id/button6"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:padding="0dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="7"
                            android:id="@+id/button7"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="8"
                            android:id="@+id/button8"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="9"
                            android:id="@+id/button9"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:padding="0dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="ลบ"
                            android:id="@+id/buttonDel"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:background="@drawable/button_del"
                            android:textColor="@color/text_topup_pad"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/button0"
                            android:layout_weight="1"
                            android:textSize="35sp"
                            android:gravity="center"
                            android:background="@drawable/button_normal"
                            android:textColor="@color/text_btn_pad" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="เติม"
                            android:id="@+id/buttonTopup"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:background="@drawable/button_ok"
                            android:textColor="@color/text_topup_pad"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>